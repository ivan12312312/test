<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/black"
	tools:context=".MainActivity"
	>
	<ImageButton
		android:id="@+id/switch_to_list_device_musics"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="@id/player_left"
		app:layout_constraintRight_toLeftOf="@id/switch_to_list_radio_stations"
		android:layout_height="32dp"
		android:layout_width="0dp"
		android:src="@drawable/ic_play"
		android:background="@drawable/roundcorner_rectangle_top_left_round"
		/>
	<ImageButton
		android:id="@+id/switch_to_list_radio_stations"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toRightOf="@id/switch_to_list_device_musics"
		app:layout_constraintRight_toRightOf="@id/player_right"
		android:layout_height="32dp"
		android:layout_width="0dp"
		android:src="@drawable/ic_play"
		android:background="@drawable/roundcorner_rectangle_top_right_round"
		/>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/device_musics_list"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@id/switch_to_list_device_musics"
		app:layout_constraintStart_toStartOf="@id/player_left"
		app:layout_constraintEnd_toEndOf="@id/player_right"
		app:layout_constraintBottom_toTopOf="@id/player_controls"
		/>
	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/radio_stations_list"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@id/switch_to_list_device_musics"
		app:layout_constraintStart_toStartOf="@id/player_left"
		app:layout_constraintEnd_toEndOf="@id/player_right"
		app:layout_constraintBottom_toTopOf="@id/player_controls"
		android:visibility="gone"
		/>

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/player_left"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="parent"
		android:orientation="vertical"
		app:layout_constraintGuide_begin="16dp"/>
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/player_right"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintEnd_toEndOf="parent"
		android:orientation="vertical"
		app:layout_constraintGuide_end="16dp" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/player_controls"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		android:orientation="horizontal"
		app:layout_constraintGuide_end="224dp" />
	<SeekBar
		android:id="@+id/player_sound_progress"
		android:layout_width="match_parent"
		android:layout_height="32dp"
		app:layout_constraintTop_toBottomOf="@id/player_controls"
		app:layout_constraintStart_toStartOf="@id/player_left"
		app:layout_constraintEnd_toEndOf="@id/player_right"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:maxHeight="3dp"
		android:minHeight="3dp"
		android:progress="0"
		android:progressDrawable="@drawable/seek_bar_ruler_right"
		android:thumb="@drawable/seek_bar_slider"
		android:splitTrack="false"
		android:background="@null"
		/>
	<ImageButton
		android:id="@+id/prevButton"
		android:src="@drawable/ic_prev"
		android:layout_width="48dp"
		android:layout_height="48dp"
		app:layout_constraintStart_toStartOf="@id/player_left"
		app:layout_constraintTop_toTopOf="@id/playStopButton"
		app:layout_constraintBottom_toBottomOf="@id/playStopButton"
		app:layout_constraintEnd_toStartOf="@+id/playStopButton"
		app:layout_constraintHorizontal_chainStyle="packed"
		android:textColor="@color/white"
		android:background="@drawable/roundcorner"
		tools:ignore="ContentDescription" />
	<ImageButton
		android:id="@+id/playStopButton"
		android:layout_width="64dp"
		android:layout_height="64dp"
		android:src="@drawable/ic_play"
		app:layout_constraintStart_toEndOf="@id/prevButton"
		app:layout_constraintTop_toBottomOf="@id/player_sound_progress"
		app:layout_constraintEnd_toStartOf="@id/nextButton"
		android:layout_marginTop="24dp"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="16dp"
		android:textColor="@color/white"
		android:background="@drawable/roundcorner"
		tools:ignore="ContentDescription" />
	<ImageButton
		android:id="@+id/nextButton"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:src="@drawable/ic_next"
		app:layout_constraintStart_toEndOf="@id/playStopButton"
		app:layout_constraintTop_toTopOf="@id/playStopButton"
		app:layout_constraintBottom_toBottomOf="@id/playStopButton"
		app:layout_constraintEnd_toEndOf="@id/player_right"
		android:textColor="@color/white"
		android:background="@drawable/roundcorner"
		tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>